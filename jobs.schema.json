{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Jobs schema",
  "description": "A schema describing how jobs should be generated",
  "type": "object",
  "properties": {
    "jobs": {
      "description": "A collection of jobs inside an array",
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "description": "Name of job"
          },
          "link": {
            "type": "string",
            "description": "URL to playlist"
          },
          "length": {
            "type": "integer",
            "description": "Length of playlist"
          },
          "folder_name": {
            "type": "string",
            "description": "Folder name to output download contents"
          },
          "skip": {
            "type": "boolean",
            "description": "Whether to skip this job"
          }
        },
        "required": [
          "name",
          "link",
          "length",
          "folder_name"
        ]
      }
    }
  },
  "required": [
    "jobs"
  ]
}